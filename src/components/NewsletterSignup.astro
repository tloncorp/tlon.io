<div>
  <form
    action={import.meta.env.mailchimpSignup}
    method="post"
    target="_self"
    class="relative font-medium leading-none"
    id="email-form"
    onsubmit="return validateEmail()"
  >
    <input
      type="email"
      name="EMAIL"
      autocomplete="off"
      required
      class="block w-full text-ellipsis rounded-2xl border border-blackish/10 px-6 py-4 pr-36 shadow-lg transition-colors hover:border-blackish/30 focus:border-blackish/30 focus:outline-none dark:border-white/30 dark:bg-black dark:shadow-inverted dark:placeholder:text-mono-700 dark:hover:border-white/50 dark:focus:border-white/50"
      placeholder="Hear about it first"
    />
    <div class="absolute left-[-5000px]" aria-hidden="true">
      <input
        type="text"
        name="b_f9f52f752b920bad5e8b46282_5f71947001"
        tabindex="-1"
        value=""
      />
    </div>
    <button
      type="submit"
      class="absolute right-0 top-1/2 inline-block -translate-y-1/2 rounded-2xl p-4 text-mono-500 transition-colors hover:text-black dark:text-mono-600 dark:hover:text-mono-500"
    >
      Subscribe
    </button>
  </form>
</div>

<script is:inline>
  // eslint-disable-next-line no-unused-vars
  function validateEmail() {
    var form = document.getElementById("emailForm");
    var emailInput = form.elements["EMAIL"];

    if (!emailInput.value) {
      return false;
    }

    if (!emailInput.validity.valid) {
      return false;
    }

    return true;
  }
</script>
